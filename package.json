{
  "name": "projeto",
  "version": "1.0.0",
  "description": "Downhill timer",
  "main": "index.js",
  "build": {
    "appId": "com.example.downhilltimer",
    "productName": "Downhill Timer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "node_modules/**/*",
      "assets/**/*",
      "config/**/*",
      "controllers/**/*",
      "helper/**/*",
      "migrations/**/*",
      "models/**/*",
      "services/**/*",
      "views/**/*",
      "routes.js",
      "index.js",
      ".env"
    ],
    "extraResources": [
      "db-prod.sqlite3"
    ],
    "linux": {
      "target": "deb"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "express-handlebars": "^6.0.6",
    "express-handlebars-sections": "^1.0.1",
    "http": "^0.0.1-security",
    "sequelize": "^6.28.0",
    "serialport": "^10.5.0",
    "socket.io": "^4.5.4",
    "sqlite3": "^5.1.4"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "gulp watch",
    "start": "electron .",
    "build": "electron-builder"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RafaelCecchin/downhill-timer.git"
  },
  "author": "Rafael Cecchin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/RafaelCecchin/downhill-timer/issues"
  },
  "homepage": "https://github.com/RafaelCecchin/downhill-timer#readme",
  "devDependencies": {
    "electron": "^22.3.10",
    "electron-builder": "^23.6.0",
    "gulp": "^4.0.2",
    "gulp-minify": "^3.1.0",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "node-sass": "^8.0.0",
    "sass": "^1.57.1"
  }
}
